<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="NutritionChart">
        <attr name="showText" format="boolean"/>

        <attr name="textSize" format="integer">
            <enum name="small" value="35"/>
            <enum name="medium" value="40"/>
            <enum name="large" value="50"/>
        </attr>

        <attr name="barWidth" format="integer">
            <!-- Values indicate the percentage of width to
             assign to the bar. A bar with a width of 30% of
             the view is a thick bar. 10% of the view is a
             thinner bar -->
            <enum name="thin" value="10"/>
            <enum name="medium" value="30"/>
            <enum name="thick" value="50"/>
        </attr>

        <attr name="carbohydrates_color" format="color" />
        <attr name="proteins_color" format="color" />
        <attr name="fats_color" format="color" />
    </declare-styleable>
</resources>